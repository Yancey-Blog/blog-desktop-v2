{
  "name": "blog-fe-v2",
  "version": "0.2.2",
  "private": true,
  "repository": "git@github.com:Yancey-Blog/blog-fe-v2.git",
  "author": "Yancey Leo <yanceyofficial@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "commit": "npx git-cz",
    "push": "git push --follow-tags origin master",
    "release:major": "node_modules/.bin/standard-version --release-as major && yarn push",
    "release:minor": "node_modules/.bin/standard-version --release-as minor && yarn push",
    "release:patch": "node_modules/.bin/standard-version --release-as patch && yarn push",
    "format": "prettier --write \"pages/**/*.tsx\" \"components/**/*.tsx\" \"lib/**/*.ts\" \"shared/**/*.ts\"",
    "lint": "eslint pages components lib shared --ext .ts,.tsx"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@apollo/react-ssr": "^3.1.3",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-batch-http": "^1.2.13",
    "apollo-link-error": "^1.1.12",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "isomorphic-unfetch": "^3.0.0",
    "next": "9.2.2",
    "next-with-apollo": "^5.0.0",
    "normalize.css": "^8.0.1",
    "react": "16.12.0",
    "react-dom": "16.12.0",
    "styled-components": "^5.0.1",
    "yancey-js-util": "^1.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/node": "^13.7.2",
    "@types/react": "^16.9.21",
    "@types/styled-components": "^4.4.3",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "babel-plugin-styled-components": "^1.10.7",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.4.0",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "standard-version": "^7.1.0",
    "typescript": "^3.7.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "yarn format",
      "yarn lint",
      "git add"
    ]
  }
}
